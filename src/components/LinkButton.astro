---
import { cn } from "@/lib/utils";

type Props = astroHTML.JSX.IntrinsicElements["a"] & {
	variant?: "primary" | "outline";
};

const { variant = "primary", class: className, ...props } = Astro.props;

const themes: Record<NonNullable<Props["variant"]>, string> = {
	primary: "bg-accent text-accent-foreground hover:bg-accent/80",
	outline: "border-paragraph text-paragraph border hover:bg-paragraph/20",
};

const theme = themes[variant];
---

<a
	class={cn(
		theme,
		"flex items-center gap-2 rounded-full px-6 py-2 font-medium transition-colors",
		className,
	)}
	{...props}
>
	<slot />
</a>
