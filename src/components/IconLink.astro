---
interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
	title: string;
}

const { class: className, title, ...props }: Props = Astro.props;
---

<a
	{...props}
	class={`bg-secondary rounded-full px-4 py-2 inline-block text-primary hover:bg-secondary/80 transition-colors ${className}`}
>
	<slot />

	<span class="sr-only">{title}</span>
</a>
