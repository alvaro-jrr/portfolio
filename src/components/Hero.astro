---
import profilePicture from "@/assets/profile.webp";
import { me } from "@/lib/constants";
import { FileTextIcon, MailIcon } from "@lucide/astro";
import { Image } from "astro:assets";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import LinkButton from "./LinkButton.astro";
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer class="grid grid-cols-1 lg:grid-cols-6">
	<div class="col-span-4 space-y-6">
		<Image
			src={profilePicture}
			alt="Foto de perfil"
			class="size-[4.5rem] rounded-full object-contain"
			loading="eager"
		/>

		<div class="space-y-2 font-medium">
			<h1 class="text-2xl md:text-3xl lg:text-4xl">Alvaro Resplandor</h1>

			<h2 class="text-3xl md:text-4xl lg:text-5xl">
				Desarrollador de Software
			</h2>
		</div>

		<p class="text-lg md:text-xl">
			Desarrollo soluciones de software limpias y eficientes para la web y
			dispositivos móviles
		</p>

		<div class="flex flex-col gap-2 md:flex-row">
			<LinkButton href={`mailto:${me.email}`} class="w-fit">
				<MailIcon class="size-6" />

				<span>Contáctame</span>
			</LinkButton>

			<div class="flex gap-2">
				<LinkButton
					href={me.resumeUrl}
					title="CV"
					download="Alvaro Resplandor - CV"
					variant="outline"
				>
					<FileTextIcon class="inline size-6" />

					<span class="sr-only">CV</span>
				</LinkButton>

				<LinkButton
					href={me.linkedin}
					title="LinkedIn"
					target="_blank"
					rel="noopener noreferrer"
					variant="outline"
				>
					<LinkedInIcon class="inline size-6" />

					<span class="sr-only">LinkedIn</span>
				</LinkButton>

				<LinkButton
					href={me.github}
					title="GitHub"
					target="_blank"
					rel="noopener noreferrer"
					variant="outline"
				>
					<GithubIcon class="inline size-6" />

					<span class="sr-only">GitHub</span>
				</LinkButton>
			</div>
		</div>
	</div>
</SectionContainer>
