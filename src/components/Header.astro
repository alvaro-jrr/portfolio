---
import { me } from "@/lib/constants";

const navLinks: {
	label: string;
	href: string;
}[] = [
	{
		label: "Experiencia",
		href: "/#experience",
	},
	{
		label: "Proyectos",
		href: "/#projects",
	},
	{
		label: "Sobre m√≠",
		href: "/#about-me",
	},
	{
		label: "Contacto",
		href: `mailto:${me.email}`,
	},
];
---

<header class="fixed top-0 z-10 w-full px-2 py-6">
	<nav class="flex items-center justify-center">
		<ul class="bg-header flex items-center gap-4 rounded-full md:px-4">
			{
				navLinks.map((link) => (
					<li>
						<a
							href={link.href}
							class="text-header-foreground block p-2 text-center text-sm font-medium transition-colors"
						>
							{link.label}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</header>
